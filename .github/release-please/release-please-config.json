{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "include-component-in-tag": false,
  "changelog-path": "notes/CHANGELOG.md",
  "packages": {
    ".": {
      "extra-files": [
        {
          "type": "source-file",
          "path": "Source/ScooterUtils/Public/ScooterUtilsVersion.h",
          "updater": "generic",
          "search": "VERSION_MAJOR\\s*=\\s*\\d+",
          "replace": "VERSION_MAJOR = {{version_major}}"
        },
        {
          "type": "source-file",
          "path": "Source/ScooterUtils/Public/ScooterUtilsVersion.h",
          "updater": "generic",
          "search": "VERSION_MINOR\\s*=\\s*\\d+",
          "replace": "VERSION_MINOR = {{version_minor}}"
        },
        {
          "type": "source-file",
          "path": "Source/ScooterUtils/Public/ScooterUtilsVersion.h",
          "updater": "generic",
          "search": "VERSION_PATCH\\s*=\\s*\\d+",
          "replace": "VERSION_PATCH = {{version_patch}}"
        }
      ]
    }
  }
}